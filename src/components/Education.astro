---
// Education data from resume
const educationData = [
  {
    institution: "Vellore Institute of Technology",
    degree: "Bachelor of Technology - Computer Science and Engineering",
    duration: "July, 2021 -- July, 2025",
    location: "Vellore, India",
    cgpa: "9.18",
    highlights: [
      "Focus on Computer Science and Engineering",
      "Active participation in ACM Student Chapter",
      "Involved in various technical projects and hackathons"
    ]
  },
  {
    institution: "Bhavan's Rajaji Vidhyashram",
    degree: "CBSE - Physics, Chemistry, Math, Computer Science",
    duration: "June, 2019 -- June, 2021",
    location: "Chennai, India",
    percentage: "96.4%",
    highlights: [
      "Strong foundation in Science and Mathematics",
      "Early exposure to Computer Science",
      "Excellent academic performance"
    ]
  }
];
---

<section id="education" class="py-20 px-4 sm:px-6 lg:px-8 bg-white dark:bg-gray-900">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Education
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-600 mx-auto"></div>
    </div>
    
    <div class="space-y-8">
      {educationData.map((edu, index) => (
        <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
          <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between mb-6">
            <div class="mb-4 lg:mb-0">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                {edu.institution}
              </h3>
              <h4 class="text-xl font-semibold text-blue-600 dark:text-blue-400 mb-2">
                {edu.degree}
              </h4>
              <div class="flex flex-col sm:flex-row sm:items-center gap-4 text-gray-600 dark:text-gray-400">
                <span class="flex items-center gap-1">
                  <i class="fas fa-calendar-alt"></i>
                  {edu.duration}
                </span>
                <span class="flex items-center gap-1">
                  <i class="fas fa-map-marker-alt"></i>
                  {edu.location}
                </span>
                {edu.cgpa && (
                  <span class="flex items-center gap-1">
                    <i class="fas fa-star"></i>
                    CGPA: {edu.cgpa}
                  </span>
                )}
                {edu.percentage && (
                  <span class="flex items-center gap-1">
                    <i class="fas fa-percentage"></i>
                    {edu.percentage}
                  </span>
                )}
              </div>
            </div>
            
            <!-- Institution Icon -->
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-lg">
              {edu.institution.split(' ').map(word => word[0]).join('').slice(0, 2)}
            </div>
          </div>
          
          <!-- Highlights -->
          <div class="space-y-3">
            {edu.highlights.map((highlight) => (
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
                  {highlight}
                </p>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <!-- Additional Education Info -->
    <div class="mt-12 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-700 rounded-2xl p-8">
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
        Academic Highlights
      </h3>
      
      <div class="grid md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-graduation-cap text-blue-600 dark:text-blue-400 text-2xl"></i>
          </div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Current CGPA</h4>
          <p class="text-2xl font-bold text-blue-600 dark:text-blue-400">9.18</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-purple-100 dark:bg-purple-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-certificate text-purple-600 dark:text-purple-400 text-2xl"></i>
          </div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Certifications</h4>
          <p class="text-2xl font-bold text-purple-600 dark:text-purple-400">2</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-trophy text-green-600 dark:text-green-400 text-2xl"></i>
          </div>
          <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Hackathon Wins</h4>
          <p class="text-2xl font-bold text-green-600 dark:text-green-400">1</p>
        </div>
      </div>
    </div>
  </div>
</section> 